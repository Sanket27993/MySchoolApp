<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollViewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/dim_10_dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewTitle"
                        android:textSize="@dimen/text_small"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Student Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10_dp"
                    cardview:cardUseCompatPadding="false"
                    android:layout_gravity="top"
                    app:cardBackgroundColor="@color/white"
                    cardview:cardCornerRadius="3dp"
                    cardview:cardElevation="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/relativeLayoutEdit"
                            android:layout_marginTop="@dimen/dim_5_dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageViewNameEdit"
                                android:layout_alignParentRight="true"
                                android:tint="@color/text_gray"
                                android:gravity="right"
                                android:paddingRight="@dimen/dim_15_dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/ic_edit_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <ViewSwitcher
                            android:id="@+id/viewSwitcherName"
                            android:measureAllChildren="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/linearLayoutDisplayName"
                                android:padding="@dimen/dim_10_dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Name "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayName"
                                        android:fontFamily="@font/raleway_regular"
                                        android:textColor="@color/textPrimary"
                                        
                                        android:singleLine="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Gender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayGender"
                                        android:textColor="@color/textPrimary"
                                        android:fontFamily="@font/raleway_regular"
                                        
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Class"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayClass"
                                        android:textColor="@color/textPrimary"
                                        android:fontFamily="@font/raleway_regular"
                                        
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linearLayoutEditName"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:paddingLeft="@dimen/dim_10_dp"
                                    android:paddingRight="@dimen/dim_10_dp"
                                    android:paddingBottom="@dimen/dim_10_dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/editTextEditName"
                                        android:singleLine="true"
                                        android:hint="@string/name"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_name"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:orientation="horizontal"
                                        android:id="@+id/radioGroup">
                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true"
                                            android:id="@+id/radiobuttonMale"
                                            android:text="Male"/>
                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/radiobuttonFemale"
                                            android:text="Female"/>
                                    </RadioGroup>
                                    <EditText
                                        android:id="@+id/editTextClass"
                                        android:hint="@string/student_class"
                                        android:maxLength="10"
                                        android:singleLine="true"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:layout_width="match_parent"
                                        android:imeOptions="actionNext"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />

                                </LinearLayout>
                            </LinearLayout>
                        </ViewSwitcher>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10_dp"
                    cardview:cardUseCompatPadding="false"
                    android:layout_gravity="top"
                    app:cardBackgroundColor="@color/white"
                    cardview:cardCornerRadius="3dp"
                    cardview:cardElevation="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/relativeLayoutInfoEdit"
                            android:layout_marginTop="@dimen/dim_5_dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageViewInfoEdit"
                                android:layout_alignParentRight="true"
                                android:tint="@color/text_gray"
                                android:gravity="right"
                                android:paddingRight="@dimen/dim_15_dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/ic_edit_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <ViewSwitcher
                            android:id="@+id/viewSwitcherInfo"
                            android:measureAllChildren="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/linearLayoutDisplayInfo"
                                android:padding="@dimen/dim_10_dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="BirthDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayBirthDate"
                                        android:fontFamily="@font/arial"
                                        android:textColor="@color/textPrimary"
                                        
                                        android:singleLine="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/dim_10_dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Address "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:lines="3"
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayAddress"
                                        android:textColor="@color/textPrimary"
                                        android:fontFamily="@font/raleway_regular"
                                       
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/dim_5_dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayEmail"
                                        android:textColor="@color/textPrimary"
                                        android:fontFamily="@font/raleway_regular"
                                        
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:text="Contact No :"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:paddingLeft="@dimen/dim_5_dp"
                                        android:id="@+id/textViewDisplayContactNo"
                                        android:textColor="@color/textPrimary"
                                        android:fontFamily="@font/arial"
                                        
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutEditInfo"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:paddingLeft="@dimen/dim_10_dp"
                                    android:paddingRight="@dimen/dim_10_dp"
                                    android:paddingBottom="@dimen/dim_10_dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewEditBirthDate"
                                        android:layout_height="@dimen/edittext_height"
                                        android:layout_width="match_parent"
                                        android:gravity="center_vertical"
                                        android:hint="mm/dd/yyyy"
                                        android:background="@drawable/edittext_border_gray"
                                        android:fontFamily="@font/raleway_medium"
                                        android:paddingStart="@dimen/padding_noraml"
                                        android:paddingEnd="@dimen/padding_noraml"
                                        android:layout_marginTop="@dimen/dim_5_dp"/>

                                    <EditText
                                        android:id="@+id/editTextEditAddress"
                                        android:singleLine="true"
                                        android:hint="@string/address"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:lines="2"
                                        android:maxHeight="@dimen/dim_100_dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_address1"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditStreet"
                                        android:singleLine="true"
                                        android:hint="@string/street"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditCity"
                                        android:singleLine="true"
                                        android:hint="@string/city"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_city"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditState"
                                        android:singleLine="true"
                                        android:hint="@string/state"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_name"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditCountry"
                                        android:singleLine="true"
                                        android:hint="@string/country"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_address1"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditPostalCode"
                                        android:singleLine="true"
                                        android:inputType="number"
                                        android:hint="@string/postalcode"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arial"
                                        android:maxLength="@integer/max_zipcode"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditEmail"
                                        android:singleLine="true"
                                        android:hint="@string/email"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:imeOptions="actionNext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_regular"
                                        android:maxLength="@integer/max_email"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />
                                    <EditText
                                        android:id="@+id/editTextEditContactNo"
                                        android:singleLine="true"
                                        android:inputType="number"
                                        android:maxLength="@integer/max_phone_no"
                                        android:imeOptions="actionNext"
                                        android:hint="@string/contactno"
                                        android:layout_marginTop="@dimen/dim_5_dp"
                                        android:paddingTop="@dimen/dim_10_dp"
                                        android:paddingBottom="@dimen/dim_10_dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arial"
                                        style="@style/EditTextStyle"
                                        android:background="@drawable/edittext_border_gray"
                                        android:layout_centerVertical="true" />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/linearLayoutButton"
                                    android:orientation="horizontal"
                                    android:paddingRight="@dimen/dim_10_dp"
                                    android:paddingBottom="@dimen/dim_10_dp"
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <Button
                                        android:id="@+id/btnCancel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_micro"
                                        android:fontFamily="@font/raleway_semibold"
                                        android:layout_marginRight="@dimen/dim_5_dp"
                                        android:theme="?android:attr/selectableItemBackground"
                                        android:textAllCaps="True"
                                        android:text="Cancel"/>
                                    <Button
                                        android:id="@+id/btnSave"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/raleway_semibold"
                                        android:theme="@style/PrimaryButton"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_micro"
                                        android:textAllCaps="True"
                                        android:text="Save"/>
                                </LinearLayout>
                            </LinearLayout>
                        </ViewSwitcher>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10_dp"
                    cardview:cardUseCompatPadding="false"
                    android:layout_gravity="top"
                    app:cardBackgroundColor="@color/white"
                    cardview:cardCornerRadius="3dp"
                    cardview:cardElevation="5dp">

                    <LinearLayout
                        android:padding="@dimen/dim_10_dp"
                        android:id="@+id/linearLayoutFileUpload"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textViewchooseFile"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/dim_10_dp"
                            android:background="@drawable/textview_border"
                            android:layout_marginTop="@dimen/dim_10_dp"
                            android:text="@string/choose_file"
                            android:textSize="@dimen/text_micro"
                            android:textColor="@color/text_gray3"
                            android:fontFamily="@font/raleway_regular"/>

                        <TextView
                            android:id="@+id/textViewFileName"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/dim_10_dp"
                            android:textSize="@dimen/text_micro"
                            android:textColor="@color/text_light_gray"
                            android:fontFamily="@font/raleway_regular"/>


                        <Button
                            android:id="@+id/buttonUpload"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload"
                            android:layout_marginTop="@dimen/dim_10_dp"
                            android:textSize="@dimen/text_mini"
                            android:textAllCaps="true"
                            android:theme="@style/PrimaryButton"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textViewFileUploadedMsg"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="@string/file_upload_success"
                            android:layout_marginTop="@dimen/dim_10_dp"
                            android:textSize="@dimen/text_micro"
                            android:textColor="@color/text_light_gray"
                            android:fontFamily="@font/raleway_regular"/>


                        

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                 <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10_dp"
                    cardview:cardUseCompatPadding="false"
                    android:layout_gravity="top"
                    app:cardBackgroundColor="@color/white"
                    cardview:cardCornerRadius="3dp"
                    cardview:cardElevation="5dp">
                     <TextView
                            android:text="Sign Out"
                            android:id="@+id/textViewSignOut"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                           
                            android:layout_margin="@dimen/dim_10_dp"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/orange"
                            android:fontFamily="@font/raleway_semibold"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAudited"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/white"
                    android:text="Audit"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
