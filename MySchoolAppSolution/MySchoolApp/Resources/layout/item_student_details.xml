<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_5_dp"
    app:cardUseCompatPadding="false"
    android:layout_gravity="top"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:padding="@dimen/dim_10_dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dim_5_dp"
            android:paddingLeft="@dimen/dim_5_dp"
            android:id="@+id/textViewName"
            android:fontFamily="@font/raleway_regular"
            android:textColor="@color/textPrimary"
            
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dim_5_dp"
            android:paddingLeft="@dimen/dim_5_dp"
            android:id="@+id/textViewAddress"
            android:fontFamily="@font/raleway_regular"
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dim_5_dp"
            android:paddingLeft="@dimen/dim_5_dp"
            android:id="@+id/textViewContactNo"
            android:fontFamily="@font/arial"
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dim_5_dp"
            android:paddingLeft="@dimen/dim_5_dp"
            android:id="@+id/textViewUserName"
            android:fontFamily="@font/arial"
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/dim_10_dp"
            android:paddingRight="@dimen/dim_5_dp"
            android:paddingLeft="@dimen/dim_5_dp"
            android:background="@color/bg_edittext_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="2"
            android:paddingLeft="@dimen/dim_10_dp"
            android:layout_marginTop="@dimen/dim_5_dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dim_5_dp"
                    android:id="@+id/textViewAudited"
                    android:textSize="@dimen/text_mini"
                   
                    android:fontFamily="@font/raleway_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/linearLayoutEdit"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/dim_20_dp"
                    android:contentDescription=""
                    android:id="@+id/imageViewEdit"
                    android:layout_alignParentRight="true"
                    android:tint="@color/text_gray"
                    android:gravity="right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_edit_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:contentDescription=""
                    android:layout_marginRight="@dimen/dim_20_dp"
                    android:id="@+id/imageViewDelete"
                    android:layout_alignParentRight="true"
                    android:tint="@color/text_gray"
                    android:gravity="right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_delete_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
